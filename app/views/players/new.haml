%h2 Register a New Player

- form_for @player do |f|
  = f.error_messages

  %p
    = f.label :name
    %br
    = f.text_field :name

  %p
    = f.label :login, 'Nickname'
    %br
    = f.text_field :login

  %p
    = f.label :email
    %br
    = f.text_field :email

  %p
    = f.label :password
    %br
    = f.password_field :password

  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation

  %p
    = f.submit 'Register'
